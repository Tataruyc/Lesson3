<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkingWithFileFragment">


    <Button
        android:id="@+id/createFileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="159dp"
        android:text="Создать файл"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/downloadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Загрузить файл"
        app:layout_constraintEnd_toEndOf="@+id/createFileBtn"
        app:layout_constraintStart_toStartOf="@+id/createFileBtn"
        app:layout_constraintTop_toBottomOf="@+id/createFileBtn" />

    <TextView
        android:id="@+id/showText"
        android:layout_width="309dp"
        android:layout_height="388dp"
        android:layout_marginTop="16dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/downloadFile"
        app:layout_constraintStart_toStartOf="@+id/downloadFile"
        app:layout_constraintTop_toBottomOf="@+id/downloadFile" />


</androidx.constraintlayout.widget.ConstraintLayout>